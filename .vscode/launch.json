    "version": "0.2.0",
    "configurations": [
        {
            "type": "bun",
            "internalConsoleOptions": "neverOpen",
            "request": "launch",
            "name": "Debug Server",
            "program": "src/index.ts",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "watchMode": true
        },
        {
            "type": "bun",
            "internalConsoleOptions": "neverOpen",
            "request": "launch",
            "name": "Run Server",
            "program": "src/index.ts",
            "cwd": "${workspaceFolder}",
            "noDebug": true,
            "watchMode": false
        },
    ]
}