{
	"$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
	"files": {
		"ignoreUnknown": true,
		"includes": ["./src/**/*.ts"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useEnumInitializers": "off"
			},
			"nursery": {
				"useSortedClasses": "error"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 90,
		"indentWidth": 2,
		"formatWithErrors": true
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"indentWidth": 2
		}
	},
	"vcs": {
		"enabled": true,
		"useIgnoreFile": true,
		"clientKind": "git"
	}
}
